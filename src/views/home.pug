doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Noom
    main
      div#welcome
        form 
          input(placeholder="nickname", id='nickname' required, type="text")
          input(placeholder="room name", id='room-name' required, type="text")
          button Enter Room
        h4 Open Rooms: 
        ul
      div#room
        h3
        ul 
        form#msg
          input(placeholder="message", required, type="text")
          button Send
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")